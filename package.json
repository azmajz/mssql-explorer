{
  "name": "mssql-explorer",
  "displayName": "MSSQL Explorer",
  "description": "A VS Code extension for exploring and managing MSSQL databases",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mssql-explorer",
          "title": "MSSQL Explorer",
          "icon": "./media/mssql.svg"
        }
      ]
    },
    "views": {
      "mssql-explorer": [
        {
          "id": "mssqlConnections",
          "name": "CONNECTIONS",
          "when": "true"
        },
        {
          "id": "mssqlBookmarked",
          "name": "BOOKMARKED",
          "when": "true"
        }
      ]
    },
    "commands": [
      {
        "command": "mssql-explorer.addConnection",
        "title": "MSSQL: Add Connection",
        "icon": "$(add)"
      },
      {
        "command": "mssql-explorer.previewData",
        "title": "Preview Data",
        "icon": "$(eye)"
      },
      {
        "command": "mssql-explorer.copyTableName",
        "title": "Copy Table Name",
        "icon": "$(copy)"
      },
      {
        "command": "mssql-explorer.filterGroup",
        "title": "Filter",
        "icon": "$(search)"
      },
      {
        "command": "mssql-explorer.clearGroupFilter",
        "title": "Clear Filter",
        "icon": "$(close)"
      },
      {
        "command": "mssql-explorer.filterDatabase",
        "title": "Filter Database",
        "icon": "$(search)"
      },
      {
        "command": "mssql-explorer.clearDatabaseFilter",
        "title": "Clear Database Filter",
        "icon": "$(close)"
      },
      {
        "command": "mssql-explorer.openFilterResults",
        "title": "Open Filter Results",
        "icon": "$(go-to-file)"
      },
      {
        "command": "mssql-explorer.editConnection",
        "title": "MSSQL: Edit Connection",
        "icon": "$(gear)"
      },
      {
        "command": "mssql-explorer.deleteConnection",
        "title": "MSSQL: Delete Connection",
        "icon": "$(trash)"
      },
      {
        "command": "mssql-explorer.connect",
        "title": "Connect database",
        "icon": "$(plug)"
      },
      {
        "command": "mssql-explorer.disconnect",
        "title": "Disconnect database",
        "icon": "$(debug-disconnect)"
      },
      {
        "command": "mssql-explorer.refresh",
        "title": "MSSQL: Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "mssql-explorer.addQuery",
        "title": "MSSQL: Add Query",
        "icon": "$(add)"
      },
      {
        "command": "mssql-explorer.editQuery",
        "title": "MSSQL: Edit Query",
        "icon": "$(edit)"
      },
      {
        "command": "mssql-explorer.deleteQuery",
        "title": "MSSQL: Delete Query",
        "icon": "$(trash)"
      },
      {
        "command": "mssql-explorer.executeQuery",
        "title": "MSSQL: Execute Query",
        "icon": "$(play)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "mssql-explorer.addConnection",
          "when": "view == mssqlConnections",
          "group": "navigation@1"
        },
        {
          "command": "mssql-explorer.refresh",
          "when": "view == mssqlConnections",
          "group": "navigation@9"
        },
        {
          "command": "mssql-explorer.addQuery",
          "when": "view == mssqlBookmarked",
          "group": "navigation@1"
        },
        {
          "command": "mssql-explorer.refresh",
          "when": "view == mssqlBookmarked",
          "group": "navigation@9"
        }
      ],
      "view/item/context": [
        { "command": "mssql-explorer.filterDatabase", "when": "view == mssqlConnections && viewItem == database", "group": "inline@0" },
        { "command": "mssql-explorer.openFilterResults", "when": "view == mssqlConnections && viewItem == databaseFiltered", "group": "inline@1" },
        { "command": "mssql-explorer.clearDatabaseFilter", "when": "view == mssqlConnections && viewItem == databaseFiltered", "group": "inline@2" },
        {
          "command": "mssql-explorer.previewData",
          "when": "view == mssqlConnections && viewItem == view",
          "group": "inline@0"
        },
        { "command": "mssql-explorer.filterGroup", "when": "view == mssqlConnections && viewItem == tables && viewItem != databaseFiltered", "group": "inline@0" },
        { "command": "mssql-explorer.openFilterResults", "when": "view == mssqlConnections && viewItem == tablesFiltered", "group": "inline@1" },
        { "command": "mssql-explorer.clearGroupFilter", "when": "view == mssqlConnections && viewItem == tablesFiltered", "group": "inline@2" },
        { "command": "mssql-explorer.filterGroup", "when": "view == mssqlConnections && viewItem == views && viewItem != databaseFiltered", "group": "inline@0" },
        { "command": "mssql-explorer.openFilterResults", "when": "view == mssqlConnections && viewItem == viewsFiltered", "group": "inline@1" },
        { "command": "mssql-explorer.clearGroupFilter", "when": "view == mssqlConnections && viewItem == viewsFiltered", "group": "inline@2" },
        { "command": "mssql-explorer.filterGroup", "when": "view == mssqlConnections && viewItem == procedures && viewItem != databaseFiltered", "group": "inline@0" },
        { "command": "mssql-explorer.openFilterResults", "when": "view == mssqlConnections && viewItem == proceduresFiltered", "group": "inline@1" },
        { "command": "mssql-explorer.clearGroupFilter", "when": "view == mssqlConnections && viewItem == proceduresFiltered", "group": "inline@2" },
        { "command": "mssql-explorer.filterGroup", "when": "view == mssqlConnections && viewItem == functions && viewItem != databaseFiltered", "group": "inline@0" },
        { "command": "mssql-explorer.openFilterResults", "when": "view == mssqlConnections && viewItem == functionsFiltered", "group": "inline@1" },
        { "command": "mssql-explorer.clearGroupFilter", "when": "view == mssqlConnections && viewItem == functionsFiltered", "group": "inline@2" },
        {
          "command": "mssql-explorer.connect",
          "when": "view == mssqlConnections && viewItem == connection && !mssqlConnections.isConnected",
          "group": "inline@1"
        },
        {
          "command": "mssql-explorer.disconnect",
          "when": "view == mssqlConnections && viewItem == connection && mssqlConnections.isConnected",
          "group": "inline@1"
        },
        {
          "command": "mssql-explorer.editConnection",
          "when": "view == mssqlConnections && viewItem == connection",
          "group": "inline@2"
        },
        {
          "command": "mssql-explorer.deleteConnection",
          "when": "view == mssqlConnections && viewItem == connection",
          "group": "inline@3"
        },
        {
          "command": "mssql-explorer.refresh",
          "when": "view == mssqlConnections && viewItem != databaseFiltered",
          "group": "inline@9"
        },
        {
          "command": "mssql-explorer.addConnection",
          "when": "view == mssqlConnections && viewItem == connections",
          "group": "inline@1"
        },
        {
          "command": "mssql-explorer.editQuery",
          "when": "view == mssqlBookmarked && viewItem == savedQuery",
          "group": "inline@1"
        },
        {
          "command": "mssql-explorer.deleteQuery",
          "when": "view == mssqlBookmarked && viewItem == savedQuery",
          "group": "inline@2"
        },
        {
          "command": "mssql-explorer.executeQuery",
          "when": "view == mssqlBookmarked && viewItem == savedQuery",
          "group": "inline@0"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "dependencies": {
    "msnodesqlv8": "^5.1.1",
    "mssql": "^11.0.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "eslint": "^9.34.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
