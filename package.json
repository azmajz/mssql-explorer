{
  "name": "mssql-explorer",
  "displayName": "mssql-explorer",
  "description": "desc-mssql-explorer",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Database"
  ],
  "main": "./extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mssql-explorer",
          "title": "MSSQL Explorer",
          "icon": "$(database)"
        }
      ]
    },
    "views": {
      "mssql-explorer": [
        {
          "id": "mssqlExplorer",
          "name": "MSSQL Explorer",
          "when": "true"
        }
      ]
    },
    "commands": [
      {
        "command": "mssql-explorer.connect",
        "title": "Connect to Database",
        "icon": "$(link)"
      },
      {
        "command": "mssql-explorer.disconnect",
        "title": "Disconnect",
        "icon": "$(close)"
      },
      {
        "command": "mssql-explorer.executeQuery",
        "title": "Execute Query",
        "icon": "$(play)"
      },
      {
        "command": "mssql-explorer.openExplorer",
        "title": "Open MSSQL Explorer",
        "icon": "$(database)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "mssql-explorer.connect",
          "when": "view == mssqlExplorer",
          "group": "navigation"
        },
        {
          "command": "mssql-explorer.disconnect",
          "when": "view == mssqlExplorer",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "mssql-explorer.connect",
          "when": "true"
        },
        {
          "command": "mssql-explorer.disconnect",
          "when": "true"
        },
        {
          "command": "mssql-explorer.executeQuery",
          "when": "true"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "dependencies": {
    "msnodesqlv8": "^5.1.1",
    "mssql": "^11.0.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "eslint": "^9.34.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
