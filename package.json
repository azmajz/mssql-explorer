{
  "name": "mssql-explorer",
  "displayName": "mssql-explorer",
  "description": "desc-mssql-explorer",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mssqlExplorer",
          "title": "MSSQL Explorer",
          "icon": "media/database.svg"
        }
      ]
    },
    "views": {
      "mssqlExplorer": [
        {
          "id": "mssqlConnections",
          "name": "Connections"
        }
      ]
    },
    "commands": [
      { "command": "mssqlExplorer.newConnection", "title": "New Connection", "icon": "$(add)" },
      { "command": "mssqlExplorer.openInTab", "title": "Open in Tab" },
      { "command": "mssqlExplorer.connect", "title": "Connect" },
      { "command": "mssqlExplorer.disconnect", "title": "Disconnect" },
      { "command": "mssqlExplorer.editConnection", "title": "Edit Connection" },
      { "command": "mssqlExplorer.deleteConnection", "title": "Delete Connection" },
      { "command": "mssqlExplorer.refreshConnections", "title": "Refresh" }
    ],
    "menus": {
      "view/title": [
        {
          "command": "mssqlExplorer.newConnection",
          "when": "view == mssqlConnections",
          "group": "navigation@1"
        },
        {
          "command": "mssqlExplorer.refreshConnections",
          "when": "view == mssqlConnections",
          "group": "navigation@2"
        }
      ],
      "view/item/context": [
        { "command": "mssqlExplorer.openInTab", "when": "view == mssqlConnections && viewItem =~ /connection/", "group": "inline@1" },
        { "command": "mssqlExplorer.connect", "when": "view == mssqlConnections && viewItem == connection:disconnected", "group": "inline@2" },
        { "command": "mssqlExplorer.disconnect", "when": "view == mssqlConnections && viewItem == connection:connected", "group": "inline@3" },
        { "command": "mssqlExplorer.editConnection", "when": "view == mssqlConnections && viewItem =~ /connection/", "group": "2_edit" },
        { "command": "mssqlExplorer.deleteConnection", "when": "view == mssqlConnections && viewItem =~ /connection/", "group": "3_delete" }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "dependencies": {
    "msnodesqlv8": "^5.1.1",
    "mssql": "^11.0.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "eslint": "^9.34.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
